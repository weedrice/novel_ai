# ==================================================
# Novel AI - Docker Compose Environment Variables
# ==================================================
# Copy this file to .env and fill in your values

# ==================================================
# Service Ports
# ==================================================
FRONTEND_PORT=3001
API_SERVER_PORT=8080
LLM_SERVER_PORT=8000
POSTGRES_PORT=5432
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# ==================================================
# PostgreSQL Database
# ==================================================
POSTGRES_DB=novel_ai
POSTGRES_USER=dev
POSTGRES_PASSWORD=dev1234

# ==================================================
# JWT Configuration
# ==================================================
# IMPORTANT: Change this secret in production!
# Generate a secure key using: openssl rand -base64 64
JWT_SECRET=novelAiJwtSecretKey2025ForDevelopmentOnlyDoNotUseInProductionPleaseReplaceWithEnvironmentVariable
# Access Token: 15 minutes (900000ms)
JWT_ACCESS_TOKEN_EXPIRATION=900000
# Refresh Token: 7 days (604800000ms)
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# ==================================================
# Neo4j Database (Optional - for Phase 9)
# ==================================================
NEO4J_AUTH=neo4j/password

# ==================================================
# LLM Server Configuration
# ==================================================
# These should match llm-server/.env
DEFAULT_LLM_PROVIDER=openai

# OpenAI (GPT)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.8
OPENAI_MAX_TOKENS=150

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_TEMPERATURE=0.8
ANTHROPIC_MAX_TOKENS=150
z
# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.8
GEMINI_MAX_TOKENS=150

# ==================================================
# Internal Service URLs (Docker Network)
# ==================================================
# These are used for service-to-service communication
# within the Docker network
API_SERVER_URL=http://api-server:8080
LLM_SERVER_URL=http://llm-server:8000
FRONTEND_URL=http://frontend:3000

# ==================================================
# External URLs (for browser access)
# ==================================================
NEXT_PUBLIC_API_BASE=http://localhost:8080
